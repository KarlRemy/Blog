{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
    <h1>Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commentaire.id | raw}}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ commentaire.contenu | raw}}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ commentaire.titre | raw}}</td>
            </tr>
            <tr>
                <th>Valide</th>
                <td>{{ commentaire.valide ? 'Yes' : 'No'| raw }}</td>
            </tr>
        </tbody>
    </table>

    <a class="col-12 text-center mt-5" href="{{ path('commentaire_index') }}">back to list</a>

    {% if commentaire.idUser.id is same as(app.user.id) %}
        <a class="col-12 text-center mt-5" href="{{ path('commentaire_edit', {'id': commentaire.id| raw}) }}">edit</a>
        {{ include('commentaire/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
