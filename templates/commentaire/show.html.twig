{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
    <h1>Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commentaire.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ commentaire.contenu }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ commentaire.titre }}</td>
            </tr>
            <tr>
                <th>Valide</th>
                <td>{{ commentaire.valide ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('commentaire_index') }}">back to list</a>

    {% if commentaire.idUser.id is same as(app.user.id) %}
        <a href="{{ path('commentaire_edit', {'id': commentaire.id}) }}">edit</a>
        {{ include('commentaire/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
