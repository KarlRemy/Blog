{% extends 'base.html.twig' %}
{% block title %}premiere page visiteur{% endblock %}
{% block menuEncre %}

{% endblock %}
{% block body %}

    <div class="row">
        <h2 class="col-12 text-center mt-5">Karl Remy</h2>
        <img class="col-6 offset-3 col-lg-2 offset-lg-5 mt-5" src="./images/karl.jpg" style="width: 50px;" alt="moi">
        <p class="col-12 text-center mt-5" style="color: #838080">Je ne veux pas me contenter de ce que je sais déjà, je veux tout apprendre</p>
        <a class="col-6 offset-3 col-lg-2 offset-lg-5 text-center mt-5 btn btn-info" href="https://drive.google.com/file/d/1cobQXwGbeYlfdEKizzJfGFmHr7vuwOUm/view" target="_blank">CV</a>
    </div>
    <div class="row mt-5">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading text-uppercase ">Contactez-Moi</h2>
        </div>
        <div class="col-lg-12 m-4 ">
            <form id="contactForm" name="sentMessage" novalidate="novalidate" method="post" action="{{ path('mail') }}">
                <div class="row">
                    <div class="col-12 col-lg-6">
                        <div class="form-group mb-5">
                            <input class="form-control" id="name" name="name" type="text" placeholder="Prénom Nom *" required="required" data-validation-required-message="Merci d'écrire votre nom et prénom.">
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group mb-5">
                            <input class="form-control" id="email" name="email" type="email" placeholder="Mail *" required="required" data-validation-required-message="Merci d'écrire votre adresse mail.">
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group mb-5">
                            <input class="form-control" id="phone" type="tel" name="tel" placeholder="Numéro de téléphone *" required="required" data-validation-required-message="Merci d'écrire votre numéro de téléphone.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="form-group">
                            <textarea class="form-control" id="message" name="message" placeholder="Votre message *" required="required" rows="10" data-validation-required-message="Merci d'écrire votre message."></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>

                    <div class="col-12 text-center pb-5">
                        <button id="sendMessageButton" class="btn btn-lg text-uppercase vag_rounded_bold bg-white" type="submit">Envoyer</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}